<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_item" resource="checkout" comment="Sales Flat Quote Item">
        <column xsi:type="text" name="custom_height_price" nullable="true"
            comment="Custom Height Price"/>
        <column xsi:type="text" name="custom_height_value" nullable="true"
            comment="Custom Height Value"/>
        <column xsi:type="text" name="custom_height_cost" nullable="true"
                comment="Custom Height Cost"/>
    </table>
    <table name="sales_order_item" resource="sales" comment="Sales Flat Order Item">
        <column xsi:type="text" name="custom_height_price" nullable="true"
            comment="Custom Height Price"/>
        <column xsi:type="text" name="custom_height_value" nullable="true"
            comment="Custom Height Value"/>
        <column xsi:type="text" name="custom_height_cost" nullable="true"
            comment="Custom Height Cost"/>
    </table>
</schema>
