<?php

/** @var \Magento\Wishlist\Block\Customer\Wishlist\Item\Column\Info $block */

/** @var \Magento\Wishlist\Model\Item $item */
$item = $block->getItem();
$product = $item->getProduct();
/** @var  \Capgemini\DataLayer\Helper\Data $helper */
$helper = $this->helper('Capgemini\DataLayer\Helper\Data');
?>
<span class="wishlist-item-data-layer"
      data-product-name="<?= $block->escapeHtmlAttr($product->getName()) ?>"
