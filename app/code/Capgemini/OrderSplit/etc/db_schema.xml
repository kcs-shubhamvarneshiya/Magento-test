<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="checkout">
        <column xsi:type="text" name="custom_po_numbers" nullable="true" comment="PO Numbers"/>
        <column xsi:type="text" name="custom_promo_codes" nullable="true" comment="Custom Promo Codes"/>
    </table>
    <table name="sales_order" resource="sales">
        <column xsi:type="text" name="custom_po_numbers" nullable="true" comment="PO Numbers"/>
        <column xsi:type="text" name="custom_promo_codes" nullable="true" comment="Custom Promo Codes"/>
    </table>
</schema>
