<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer-account-navigation-orders-link" remove="true"/>
        <referenceBlock name="company-customer-account-navigation-orders-link" remove="true"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-orderview-orders-link">
                <arguments>
                    <argument name="path" xsi:type="string">orderview/orders/history</argument>
                    <argument name="label" xsi:type="string" translate="true">My Orders</argument>
                    <argument name="sortOrder" xsi:type="number">230</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-orderview-invoices-link">
                <arguments>
                    <argument name="path" xsi:type="string">orderview/invoices/history</argument>
                    <argument name="label" xsi:type="string" translate="true">Invoices</argument>
                    <argument name="sortOrder" xsi:type="number">220</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-orderview-creditmemos-link">
                <arguments>
                    <argument name="path" xsi:type="string">orderview/creditmemos/history</argument>
                    <argument name="label" xsi:type="string" translate="true">Credit Memos</argument>
                    <argument name="sortOrder" xsi:type="number">219</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-inventory-link">
                <arguments>
                    <argument name="path" xsi:type="string">orderview/inventory</argument>
                    <argument name="label" xsi:type="string" translate="true">Inventory</argument>
                    <argument name="sortOrder" xsi:type="number">10</argument>
                </arguments>
            </block>
             <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-payment-list">
                <arguments>
                <argument name="path" xsi:type="string">orderview/payments/history</argument>
                <argument name="label" xsi:type="string">Payments</argument>
                    <argument name="sortOrder" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
